

@model List<User>
@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Tedarikçi Listesi</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Fotoğrafı</th>
                        <th>Adı Soyadı</th>
                
                        <th>Adres</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Rol</th>
               
                        <th>Durumu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        @if (item.IsActive)
                        {
                            <tr>
                                <td>   <img class="user-avatar rounded-circle" src="~/template/images/admin.jpg" style="width:%70;" alt="User Avatar"></td>
                             
                                <td>@item.FirstName @item.LastName</td>
                     
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Role</td>
                        

                                <td class="bg-success">
                                    <span>Aktif</span>
                                   
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.ID" class="btn btn-info btn-sm mb-2"><i class="fa fa-edit"></i>&nbsp; Güncelle</a>
                                    <a asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.ID" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Sil</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>   <img class="user-avatar rounded-circle" src="~/template/images/admin.jpg" style="width:%70;" alt="User Avatar"></td>

                                <td>@item.FirstName @item.LastName</td>
                              
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Role</td>

                                <td class="bg-danger">
                                    <span>Pasif</span>

                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.ID" class="btn btn-info btn-sm mb-2">&nbsp; Güncelle</a>
                                    <a asp-area="Admin" asp-controller="User" asp-action="ActivateUser" asp-route-id="@item.ID" class="btn btn-success btn-sm"><i class="fa-check-square-o"></i>&nbsp; Aktivate</a>
                                </td>
                            </tr>
                        }

                    }
                  
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Css{
    <link rel="stylesheet" href="assets/css/lib/datatable/dataTables.bootstrap.min.css">
}


@section Scripts{
    <!-- Scripts -->
 

    <script src="~/template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/template/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>

}
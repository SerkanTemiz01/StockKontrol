<div class="animated fadeIn">
    <div class="row">
        <div class="offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title text-center">Kategori Ekle</strong>
                </div>
                <div class="card-body">
                    <!-- Category -->
                    <div id="pay-invoice">
                        <div class="card-body">
                           
                            <form asp-action="AddCategory" method="post" novalidate="novalidate">
                                
                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label mb-1">Kategori Adı</label>
                                    <input asp-for="CategoryName" type="text" class="form-control" aria-required="true" aria-invalid="false" data-val-required="Lütfen kategori adı giriniz..">
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                                <div class="form-group has-success">

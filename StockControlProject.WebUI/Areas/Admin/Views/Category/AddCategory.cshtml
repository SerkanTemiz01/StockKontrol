                                    <input asp-for="Description" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Lütfen kategori açıklaması giriniz.." autocomplete="cc-name" aria-required="true" aria-invalid="false" aria-describedby="cc-name">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>                                                             
                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Kategori Ekle</span>
                                        <span id="payment-button-sending" style="display:none;">Sending…</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
